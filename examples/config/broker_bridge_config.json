{
    "id": "main",
    "version": "v1.0",
    "kind": "broker_bridge",
    "meta": {},
    "subscriptions" : [
        {
            "bridge": "bondy_kafka_bridge",
            "meta": {},
            "match": {
                "realm": "com.leapsight.test",
                "topic" : "com.leapsight.example_event",
                "options": {"match": "exact"}
            },
            "action": {
                "type": "produce_sync",
                "topic": "{{kafka.topics.wamp_events}}",
                "key": "\"{{event.topic}}/{{event.publication_id}}\"",
                "value": "{{event}}",
                "options" : {
                    "client_id": "default",
                    "acknowledge": true,
                    "required_acks": "all",
                    "partition": null,
                    "partitioner": {
                        "algorithm": "fnv32a",
                        "value": "\"{{event.topic}}/{{event.publication_id}}\""
                    },
                    "encoding": "json"
                }
            }
        }
    ]
}
