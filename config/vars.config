%% -*- erlang -*-
%%
%% etc/app.config
%%

{bondy_ip,              "127.0.0.1"}.
{https_port,            "8097"}.
{http_port,              "8098"}.
{admin_http_port,        "8099"}.


%%
%% etc/vm.args
%%
{node,                  "bondy@127.0.0.1"}.
{crash_dump,            "{{platform_log_dir}}/erl.crashdump"}.
{cookie,                "bondy"}.
% {run_user,              "bondy"}.

{cuttlefish,            "on"}.
{cuttlefish_conf,       "bondy.conf"}.

% {runner_script_dir,         "$(cd `dirname $0` ; /bin/pwd)"}.
% {runner_base_dir,           "{{runner_script_dir}}/.."}.
% {runner_bin_dir,            "$RUNNER_SCRIPT_DIR/"}.
% {runner_etc_dir,            "$RUNNER_BASE_DIR/etc"}.
% {runner_log_dir,            "$RUNNER_BASE_DIR/log"}.
% {runner_lib_dir,            "$RUNNER_BASE_DIR/lib"}.
% {runner_patch_dir,          "$RUNNER_BASE_DIR/lib/bondy-patches"}.
% {pipe_dir,                  "/tmp/$RUNNER_BASE_DIR/"}.
% {runner_user,               ""}.
{runner_wait_process,       "bondy_sup"}.
{runner_ulimit_warn,        65536}.

{peer_service_state_dir,    "./data/bondy/db/peer_service"}.
{cluster_meta_state_dir,    "./data/bondy/db/cluster_meta"}.
{platform_etc_dir,          "./etc"}.
{platform_bin_dir,          "./bin"}.
{platform_data_dir,         "./data/bondy/db"}.
{platform_lib_dir,          "./lib"}.
{platform_log_dir,          "./data/bondy/log"}.
{cuttlefish_schema_dir,     "./share/schema"}.
{platform_share_dir,        "./share"}.

% {run_user_home,         "/data/bondy"}.
